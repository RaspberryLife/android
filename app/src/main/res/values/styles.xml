<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/rbl_actionbar</item>
        <!-- Appcompat v7 Color style -->
        <item name="colorPrimary">@color/material_orange</item>
        <item name="colorPrimaryDark">@color/material_orange_dark</item>
        <item name="colorAccent">@color/material_black</item>
    </style>

    <!-- ActionBar -->
    <style name="rbl_actionbar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/material_orange</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
